    <header>
        <nav class="navbar navbar-light navbar-expand-md bg-info shadow">
            <a class="navbar-brand text-white" href="{{ path('home') }}">
                <i class="fas fa-camera"></i> Gallery
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item{{ app.request.attributes.get('_route')=='home' ? ' active' : '' }}">
                        <a class="nav-link" href="{{ path('home') }}">Home</a>
                    </li>
                    {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item{{ app.request.attributes.get('_route')=='admin' ? ' active' : '' }}">
                        <a class="nav-link" href="{{ path('admin') }}">Admin</a>
                    </li>
                    {% elseif is_granted('ROLE_USER') %}
                    <li class="nav-item{{ app.request.attributes.get('_route')=='show' ? ' active' : '' }}">
                        <a class="nav-link" href="{{ path('user') }}">Editor</a>
                    </li>
                    {% endif %}
                </ul>
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <ul class="navbar-nav">
                    <li class="nav-item dropdown mr-2">
                        <a class="nav-link dropdown-toggle align-items-center text-white" href="#"
                           id="navbarDropdownMenuUser"
                           data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-user-circle pr-1"></i> {{ app.user.username }}    
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuUser">
                            <a class="dropdown-item px-3" href="\logout">Logout</a>
                        </div>
                    </li>
                </ul>
                {% else %}
                <form action="login" method="post" class="form-inline my-2 my-lg-0">
                    <button class="btn btn-outline-light" type="button" id="loginBtn">Login</button>
                </form>
                {% endif %}
            </div>
        </nav>
    </header>